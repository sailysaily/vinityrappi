<div class="background-index">
  <h1 class="oferta-bogota">Nuestra Oferta en Bogot√°</h1>


<div id="wine-container">
<% @wines.each do |wine| %>

    <div class="card-product-wine">
      <div class = rating-photo>
        <div class="card-product-information">
          <p> Rating Vivino </p>
           <h2> <i class="fas fa-star"></i> <%= wine.rating %></h2>
          <p>Price</p>
          <h2>$<%= wine.price_cop %></h2>
        </div>
        <div class="card-product-photo">
           <%= cl_image_tag wine.photo.key %>
        </div>
      </div>
      <div class="card-product-details">
        <h3><%= wine.winery %></h3>
        <h2> <strong><%= wine.name %></strong></h2>
          <div class = country-flag>
            <div class="avatar-flag">
              <%= cl_image_tag wine.country_photo.key %>
            </div>
            <div class="origin">
              <p> <%= wine.color %> from <%= wine.region %></p>
            </div>
          </div>
          <div class="wine-style">
            <p><%= wine.wine_style %></p>
          </div>
          <div class="wine-availability">
           <p id="availability-wine"><%= wine.availability %></p>
          </div>
      </div>
       <p><%# link_to 'Show', wine %></p>
       <p id ="order-now">Order now  <a href="https://wa.link/h4ajs5"><i class="fab fa-whatsapp"></i></a></p>
    </div>

<% end %>
 </div>



