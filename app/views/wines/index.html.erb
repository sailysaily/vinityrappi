<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Winery</th>
      <th>Rating</th>
      <th>Region</th>
      <th>Grapes</th>
      <th>Color</th>
      <th>Wine style</th>
      <th>Food pairing</th>
      <th>Year</th>
      <th>Story</th>
      <th>Backgroud image</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.winery %></td>
        <td><%= wine.rating %></td>
        <td><%= wine.region %></td>
        <td><%= wine.grapes %></td>
        <td><%= wine.color %></td>
        <td><%= wine.wine_style %></td>
        <td><%= wine.food_pairing %></td>
        <td><%= wine.year %></td>
        <td><%= wine.story %></td>
        <td><%= wine.backgroud_image %></td>
        <td><%= wine.price %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

